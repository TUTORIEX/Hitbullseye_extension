{
  "manifest_version": 3,
  "name": "HitbullsEye Extension",
  "version": "0.0.1",

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png",
    "default_title": "HitbullsEye Automation"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["https://*"]
}
